# EditorConfig: https://editorconfig.org
root=true
# =============================================================================
# Default Settings for All Files
# =============================================================================
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 120

# =============================================================================
# Shell Scripts
# =============================================================================
[**.{sh,bash},bash_*,PKGBUILD,.bash*,.profile]
shell_variant = bash
spaces_around_operators = true
spaces_around_brackets = false
keep_padding = false
space_redirects = false
switch_case_indent = false
function_next_line = false
binary_next_line = true

[.{bashrc,bash_profile,bash_logout,zshrc,zshenv,zprofile}]
shell_variant = bash

[.profile]
shell_variant = posix

[**.{fish,fish_*},fishd.*,fish_*]
indent_size = 4

[**.{bat,cmd,ps1,psm1}]
indent_style = tab
indent_size = 4
end_of_line = crlf

# =============================================================================
# Programming Languages
# =============================================================================
# C/C++
[**.{c,cc,cpp,cxx,h,hpp,hxx}]
indent_size = 4
max_line_length = 100

# C#
[**.cs]
indent_size = 4

# Go (requires tabs)
[**.go,go.mod,go.sum]
indent_style = tab
indent_size = 4
tab_width = 4

# Rust
[**.rs,Cargo.toml,Cargo.lock]
indent_size = 4
max_line_length = 100

# Zig
[**.zig]
indent_size = 4

# Python
[**.{py,pyw,pyi}]
indent_size = 4
max_line_length = 88
quote_type = double

# Java
[**.java]
indent_size = 4

# JavaScript/TypeScript
[**.{js,mjs,cjs,jsx}]
quote_type = single

[**.{ts,mts,cts,tsx}]
quote_type = single

# PHP
[**.php]
indent_size = 4

# Perl
[**.{pl,pm}]
indent_size = 4

# =============================================================================
# Configuration Files
# =============================================================================
# XML
[**.{xml,svg}]
indent_size = 4

# =============================================================================
# Markup/Documentation
# =============================================================================
[**.{md,markdown}]
max_line_length = 80
trim_trailing_whitespace = false

[**.{patch,diff}]
trim_trailing_whitespace = false
insert_final_newline = false

# =============================================================================
# Build Systems & Package Managers
# =============================================================================
# Makefiles (require tabs)
[{Makefile,**.mk,.gitmodules}]
indent_style = tab
indent_size = 4
tab_width = 4

[{poetry.lock,pyproject.toml,setup.py,setup.cfg}]
indent_size = 4

# =============================================================================
# Git & Version Control
# =============================================================================
[.gitconfig]
indent_style = tab
tab_width = 4

# =============================================================================
# Special Cases
# =============================================================================
# Minified files
[**.min.{js,css}]
insert_final_newline = false

# SVG
[**.svg]
insert_final_newline = false
