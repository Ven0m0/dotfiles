# EditorConfig
# http://EditorConfig.org
# Don't search any further up the dir tree
root = true

# Baseline
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2

# Shell scripts
[*.sh,*.bash,.profile,]
keep_padding = true
space_redirects = true
switch_case_indent = true
function_next_line = true
binary_next_line = true

[*.bash,*.bashrc,.bash_profile,.bash_logout]
shell_variant = bash
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
keep_padding = true
space_redirects = true
switch_case_indent = true
function_next_line = true
binary_next_line = true

[bash*]
shell_variant = bash
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
keep_padding = true
space_redirects = true
switch_case_indent = true
function_next_line = true
binary_next_line = true

[*.fish,fish_variables,fish_plugins]
indent_size = 4

# Markdown
[*.md]
# trailing whitespaces have meaning on Markdown interpretation
trim_trailing_whitespace = false

[Makefile,*.mk]
# Makefiles require tabs
indent_style = tab
indent_size=4

[*.go,*.rs,*.zig]
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4
