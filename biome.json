{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "vcs": {"enabled": true, "clientKind": "git", "useIgnoreFile": true},
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "node_modules",
      "dist",
      "build",
      ".next",
      ".turbo",
      ".cache",
      "coverage",
      ".venv",
      "target",
      "**/*.min.js",
      "**/*.bundle.js",
      ".git",
      "vendor",
      "public/assets"
    ],
    "include": [
      "**/*.js",
      "**/*.ts",
      "**/*.jsx",
      "**/*.tsx",
      "**/*.json",
      "**/*.jsonc",
      "**/*.css"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120,
    "attributePosition": "auto",
    "ignore": ["**/package-lock.json", "**/bun.lockb", "**/*.min.css"]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["**/node_modules/**", "**/dist/**", "**/build/**"]
  },
  "linter": {
    "enabled": true,
    "ignore": ["**/node_modules/**", "**/dist/**", "**/build/**", "**/*.min.js"],
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": "warn",
        "noForEach": "off",
        "useFlatMap": "warn"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "useHookAtTopLevel": "error",
        "useExhaustiveDependencies": "warn"
      },
      "nursery": {
        "noDuplicateDependencies": "error",
        "noEvolvingTypes": "warn",
        "noMissingVarFunction": "warn",
        "useSortedClasses": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noBarrelFile": "warn",
        "noDelete": "warn",
        "noReExportAll": "warn"
      },
      "style": {
        "noDefaultExport": "off",
        "noNegationElse": "off",
        "noNonNullAssertion": "warn",
        "noParameterAssign": "warn",
        "useConsistentArrayType": "error",
        "useFilenamingConvention": "off",
        "useNodejsImportProtocol": "error",
        "useShorthandArrayType": "warn",
        "useSingleVarDeclarator": "warn"
      },
      "suspicious": {
        "noConsoleLog": "warn",
        "noDoubleEquals": "error",
        "noEmptyBlockStatements": "warn",
        "noExplicitAny": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false
    }
  },
  "json": {
    "formatter": {"trailingCommas": "none"},
    "parser": {"allowComments": true, "allowTrailingCommas": false}
  },
  "css": {
    "formatter": {"quoteStyle": "double"},
    "linter": {"enabled": true}
  },
  "overrides": [
    {
      "include": ["*.config.{js,ts,mjs,cjs}", ".*rc.{js,ts}", ".*.{js,ts}"],
      "linter": {
        "rules": {
          "suspicious": {"noConsoleLog": "off"},
          "style": {"noDefaultExport": "off"}
        }
      }
    },
    {
      "include": ["**/__tests__/**", "**/*.test.{js,ts,jsx,tsx}", "**/*.spec.{js,ts,jsx,tsx}"],
      "linter": {
        "rules": {
          "suspicious": {"noExplicitAny": "off"},
          "style": {"noNonNullAssertion": "off"}
        }
      }
    }
  ]
}
