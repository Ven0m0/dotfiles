{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/*.js",
      "**/*.ts",
      "**/*.jsx",
      "**/*.tsx",
      "**/*.json",
      "**/*.jsonc",
      "**/*.css",
      "!!**/node_modules",
      "!!**/dist",
      "!!**/build",
      "!!**/.next",
      "!!**/.turbo",
      "!!**/.cache",
      "!!**/coverage",
      "!!**/.venv",
      "!!**/target",
      "!!**/*.min.js",
      "!!**/*.bundle.js",
      "!!**/.git",
      "!!**/vendor",
      "!!**/public/assets"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120,
    "attributePosition": "auto",
    "includes": ["**/package-lock.json", "**/bun.lockb", "**/*.min.css"]
  },
  "linter": {
    "enabled": true,
    "includes": ["**/node_modules/**", "**/dist/**", "**/build/**", "**/*.min.js"],
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": "warn",
        "noForEach": "off",
        "useFlatMap": "warn"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "useHookAtTopLevel": "error",
        "useExhaustiveDependencies": "warn"
      },
      "nursery": {
        "noDuplicateDependencies": "error",
        "useSortedClasses": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noBarrelFile": "warn",
        "noDelete": "warn",
        "noReExportAll": "warn"
      },
      "style": {
        "noDefaultExport": "off",
        "noNegationElse": "off",
        "noNonNullAssertion": "warn",
        "noParameterAssign": "warn",
        "useConsistentArrayType": "error",
        "useFilenamingConvention": "off",
        "useNodejsImportProtocol": "error",
        "useSingleVarDeclarator": "warn"
      },
      "suspicious": {
        "noConsole": "warn",
        "noDoubleEquals": "error",
        "noEmptyBlockStatements": "warn",
        "noExplicitAny": "warn",
        "noEvolvingTypes": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false
    }
  },
  "json": {
    "formatter": { "trailingCommas": "none" },
    "parser": { "allowComments": true, "allowTrailingCommas": false }
  },
  "css": {
    "formatter": { "quoteStyle": "double" },
    "linter": { "enabled": true }
  },
  "overrides": [
    {
      "includes": ["*.config.{js,ts,mjs,cjs}", ".*rc.{js,ts}", ".*.{js,ts}"],
      "linter": {
        "rules": {
          "suspicious": { "noConsole": "off" },
          "style": { "noDefaultExport": "off" }
        }
      }
    },
    {
      "includes": ["**/__tests__/**", "**/*.test.{js,ts,jsx,tsx}", "**/*.spec.{js,ts,jsx,tsx}"],
      "linter": {
        "rules": {
          "suspicious": { "noExplicitAny": "off" },
          "style": { "noNonNullAssertion": "off" }
        }
      }
    }
  ]
}
