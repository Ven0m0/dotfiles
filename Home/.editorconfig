root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 120

[**.{sh,bash},bash_*,PKGBUILD,.bash*,.profile,.{bashrc,bash_profile,bash_logout,zshrc,zshenv,zprofile}]
shell_variant = bash

[.profile,**.dash,.dashrc]
shell_variant = posix

[**.{fish,fish_*},fishd.*,fish_*]
indent_size = 4

[**.{bat,cmd,ps1,psm1}]
indent_style = tab
indent_size = 4
end_of_line = crlf

[**.{c,cc,cpp,cxx,h,hpp,hxx,cs,java,php,pl,pm}]
indent_size = 4

[**.go,go.mod,go.sum]
indent_style = tab
indent_size = 4

[**.{rs,zig}]
indent_size = 4
max_line_length = 100

[**.{py,pyw,pyi}]
indent_size = 4
max_line_length = 88

[{Makefile,**.mk,.gitmodules}]
indent_style = tab
indent_size = 4

[.gitconfig]
indent_style = tab

[**.{md,markdown}]
max_line_length = 80
trim_trailing_whitespace = false

[**.{patch,diff}]
trim_trailing_whitespace = false
insert_final_newline = false

[**.min.{js,css}]
insert_final_newline = false
