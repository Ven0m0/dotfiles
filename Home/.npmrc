# npm configuration
# https://docs.npmjs.com/cli/configuring-npm/npmrc

# Display
color=true
unicode=true
progress=true
loglevel=warn

# Behavior
yes=true
workspaces-update=true
save-exact=true
engine-strict=true

# Performance
prefer-offline=true
prefer-dedupe=true
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=1000
fetch-timeout=60000

# Disable unnecessary features
fund=false
audit=false
update-notifier=false

# Search
searchlimit=20

# Registry (uncomment if needed)
# registry=https://registry.npmjs.org/

# Cache (default is ~/.npm)
# cache=~/.npm
