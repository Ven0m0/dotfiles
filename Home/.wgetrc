# wget configuration file
# https://www.gnu.org/software/wget/manual/wget.html

# Basic Options
timestamping = on
no_clobber = off
continue = on
progress = bar:force:noscroll
show_progress = on

# Download Behavior
tries = 3
retry_connrefused = on
wait = 2
random_wait = on
timeout = 60
dns_timeout = 60
connect_timeout = 60
read_timeout = 60

# User Agent
user_agent = Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# HTTP Options
content_disposition = on
trust_server_names = on
adjust_extension = on
server_response = off

# HTTPS/TLS Options
https_only = off
check_certificate = on
ca_directory = /etc/ssl/certs
secure_protocol = auto

# FTP Options
passive_ftp = on

# Proxies (uncomment if needed)
# use_proxy = on
# http_proxy = http://proxy.example.com:8080
# https_proxy = http://proxy.example.com:8080
# ftp_proxy = http://proxy.example.com:8080

# Directories
dir_prefix = ~/Downloads/

# Recursion Options
recursive = off
level = 5
delete_after = off

# Logging
verbose = off
debug = off
quiet = off

# Misc
robots = on
limit_rate = 0
no_parent = on
