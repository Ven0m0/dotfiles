# wget configuration file
# https://www.gnu.org/software/wget/manual/wget.html

# Basic Options
timestamping = on
no_clobber = off
continue = on
progress = bar:force:noscroll
show_progress = on

# Download Behavior
tries = 3
retry_connrefused = on
wait = 2
random_wait = on
timeout = 60
dns_timeout = 60
connect_timeout = 60
read_timeout = 60

# User Agent
user_agent = Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# HTTP Options
content_disposition = on
trust_server_names = on
adjust_extension = on
server_response = off
http_keep_alive = on
use_server_timestamps = on

# Security
secure_protocol = TLSv1_3
https_only = off
check_certificate = on

# Performance
limit_rate = 0
max_redirect = 10

# Logging
verbose = off
debug = off
quiet = on

# Misc
robots = off
inet4_only = off
inet6_only = off
