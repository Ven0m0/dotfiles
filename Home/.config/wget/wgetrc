# Download behavior
timestamping = on
continue = on
content_disposition = on
trust_server_names = on
adjust_extension = on
use_server_timestamps = on
no_parent = on
robots = off

# Display
progress = bar:force:noscroll
quiet = on

# Retries and timeouts
tries = 3
retry_connrefused = on
wait = 2
random_wait = on
timeout = 60
dns_timeout = 60
connect_timeout = 60
read_timeout = 60

# Redirects and validation
max_redirect = 10
check_certificate = on

# Performance
http_keep_alive = on
compression = auto

# Headers
user_agent = Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
