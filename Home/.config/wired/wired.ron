(
  max_notifications: 10,
  timeout: 5000,
  poll_interval: 16, // 60fps
  history_length: 20,
  replacing_enabled: true,
  min_window_width: 300,
  min_window_height: 0,

  layout: (
    padding: (left: 10.0, right: 10.0, top: 10.0, bottom: 10.0),
    spacing: 10.0,
    background_color: Color(hex: "#1e1e2e"), // Catppuccin Base
    border_color: Color(hex: "#89b4fa"),     // Catppuccin Blue
    border_width: 2.0,
    border_radius: 8.0,
  ),

  shortcuts: (
    notification_interact: 1,
    notification_close: 2,
    notification_action1: 3,
  ),

  blocks: [
    (
      name: "summary",
      type: Text,
      data: (
        text: "%s",
        font: "JetBrains Mono Bold 11",
        color: Color(hex: "#cdd6f4"), // Text
        padding: (left: 0.0, right: 0.0, top: 0.0, bottom: 5.0),
        dimensions: (width: (min: 50, max: 300), height: (min: 0, max: 0)),
      ),
    ),
    (
      name: "body",
      type: Text,
      data: (
        text: "%b",
        font: "JetBrains Mono 10",
        color: Color(hex: "#a6adc8"), // Subtext
        padding: (left: 0.0, right: 0.0, top: 0.0, bottom: 10.0),
        dimensions: (width: (min: 50, max: 300), height: (min: 0, max: 0)),
      ),
    ),
    (
      name: "image",
      type: Image,
      data: (
        image_path: "%i",
        dimensions: (width: (min: 40, max: 40), height: (min: 40, max: 40)),
        padding: (left: 0.0, right: 10.0, top: 0.0, bottom: 0.0),
        rounding: 4.0,
      ),
    ),
    (
      name: "progress",
      type: Progress,
      data: (
        value: "%p",
        width: 280.0,
        height: 4.0,
        background_color: Color(hex: "#313244"), // Surface0
        fill_color: Color(hex: "#89b4fa"),       // Blue
        padding: (left: 0.0, right: 0.0, top: 5.0, bottom: 0.0),
      ),
    ),
  ],
)
