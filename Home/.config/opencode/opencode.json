{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "watcher": {
    "ignore": ["node_modules/**", "dist/**", ".git/**"]
  },
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    },
    "diff_style": "auto"
  },
  "tools": {
    "write": false,
    "bash": false
  }
  "provider": {
    "anthropic": {
      "options": {
        "timeout": 600000,
        "setCacheKey": true,
        "apiKey": "{env:ANTHROPIC_API_KEY}"
      }
    }
  }
}
