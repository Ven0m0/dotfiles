#!/bin/sh
# xsudo - run graphical applications with root privileges

if [ -z $1 ]; then
    echo "at least 1 argument required!" >> /dev/stderr
    exit 1
fi

COMMAND=$1
shift #shift first arg

for ARG in "$@"; do
    if [ -z "$ARGS" ]; then
        ARGS="$ARG"
    else
        ARGS="$ARGS $ARG"
    fi
done

ARGS=\'$ARGS\'
eval pkexec env DISPLAY=$DISPLAY XAUTHORITY=$XAUTHORITY $COMMAND $ARGS
exit 0
