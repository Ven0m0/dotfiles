{
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "semi": true,
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "arrowParens": "always",
  "bracketSpacing": true,
  "printWidth": 120,
  "proseWrap": "preserve",
  "endOfLine": "lf",
  "plugins": [],
  "overrides": [
    {
      "files": ["*.json", "*.jsonc"],
      "options": {
        "trailingComma": "none",
        "parser": "json"
      }
    },
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "tabWidth": 2,
        "singleQuote": false
      }
    },
    {
      "files": ["*.md", "*.markdown"],
      "options": {
        "proseWrap": "always",
        "printWidth": 80
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "build/**",
    ".cache/**",
    "coverage/**",
    "*.min.js",
    "*.min.css",
    "*.bundle.js",
    "vendor/**",
    ".git/**"
  ]
}
