# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# =============================================================================
# Shell Scripts
# =============================================================================
*.sh text eol=lf diff=bash
*.bash text eol=lf diff=bash
*.zsh text eol=lf
*.fish text eol=lf
.bashrc text eol=lf
.bash_profile text eol=lf
.bash_logout text eol=lf
.zshrc text eol=lf
.zprofile text eol=lf
.zshenv text eol=lf
.profile text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# =============================================================================
# Programming Languages
# =============================================================================
*.py text diff=python
*.py3 text diff=python
*.pyc text diff=python
*.js diff=java
*.lua linguist-language=Lua
*.nix linguist-language=Nix

# =============================================================================
# Configuration & Data Formats
# =============================================================================
*.json diff=json
*.jsonc diff=json linguist-language=JSONC
*.yaml diff=yaml
*.yml diff=yaml
*.toml diff=toml linguist-language=TOML
*.ron linguist-language=RON
*.xml diff=xml
*.html diff=html
*.css diff=css
*.md text diff=markdown linguist-detectable linguist-documentation
*.mdx text diff=markdown linguist-detectable linguist-documentation
*.txt text linguist-documentation
*.ini text
*.cfg text
*.conf text
*.service text
*.rules text
*.csv text eol=crlf

# =============================================================================
# Binary Files
# =============================================================================
# Images
*.jpg binary diff=exif
*.jpeg binary diff=exif
*.webp binary diff=exif
*.avif binary diff=exif
*.ico binary diff=exif
*.bmp binary diff=exif
*.svg text

# Archives
*.7z binary
*.gz binary
*.tar binary
*.tgz binary
*.zip binary
*.zstd binary

# Fonts
*.ttf binary

# =============================================================================
# Special Cases
# =============================================================================
# Makefiles must use tabs
Makefile text eol=lf whitespace=blank-at-eol,-blank-at-eof,-space-before-tab,tab-in-indent,tabwidth=4

# Patches
*.patch -text diff=patch

# Git files
.gitignore export-ignore
.gitattributes export-ignore
.gitkeep export-ignore
.editorconfig text

# Visual Studio
*.dsp text eol=crlf
*.dsw text eol=crlf
*.manifest text eol=crlf

# Windows
*.bat text eol=crlf
*.cmd text eol=crlf
*.hhp text eol=crlf
*.inf text eol=crlf
*.nsi text eol=crlf
*.wxs text eol=crlf

*.doc diff=astextplain
*.DOC diff=astextplain
*.docx diff=astextplain
*.DOCX diff=astextplain
*.dot diff=astextplain
*.DOT diff=astextplain
*.pdf diff=astextplain
*.PDF diff=astextplain
*.rtf diff=astextplain
*.RTF diff=astextplain
