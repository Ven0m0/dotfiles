# Error handling
show-error
fail
fail-early

# Display
progress-bar
silent

# Redirects and retries
location
max-redirs = 10
retry = 3
retry-delay = 2
retry-max-time = 60

# Timeouts
connect-timeout = 15
max-time = 300

# Download behavior
create-dirs
remote-time
continue-at -
netrc-optional

# Security (HTTPS only)
proto "-all,https"
proto-redir "-all,https"
proto-default https

# Performance
http2
tcp-fastopen
tcp-nodelay
tls-earlydata
compressed
parallel
parallel-max = 16
parallel-immediate

# Headers
user-agent = "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
referer ";auto"
suppress-connect-headers

# Output
write-out "\n"
