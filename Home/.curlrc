# curl configuration file
# https://curl.se/docs/manpage.html

# Display options
silent
show-error
progress-bar
write-out "\n"

# Behavior
location
max-redirs = 10
retry = 3
retry-delay = 2
retry-max-time = 60
connect-timeout = 15
max-time = 300
create-dirs
skip-existing
fail
fail-early

# Authentication
netrc-optional

# Security
hsts "~/.curl-hsts"
tls-max 1.3
ssl-reqd
proto "=https,http,ftp,ftps"
proto-redir "=https,http"

# Performance
http3
tcp-fastopen
tcp-nodelay
tls-earlydata
mptcp
compressed
parallel
parallel-max = 10

# HTTP Headers
user-agent = "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
referer ";auto"

# Transfer
continue-at -
remote-time
suppress-connect-headers

# Certificate verification (uncomment if you have issues)
# insecure

# Proxy (uncomment if needed)
# proxy = "http://proxy.example.com:8080"
# noproxy = "localhost,127.0.0.1"

# Rate limiting (uncomment to limit bandwidth)
# limit-rate = 1M

# Verbose output (uncomment for debugging)
# verbose
# trace-ascii = ~/curl-trace.txt
