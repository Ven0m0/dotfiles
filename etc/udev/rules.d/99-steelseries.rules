# SteelSeries devices - allow access without root
SUBSYSTEM=="usb", ATTR{idVendor}=="1038", MODE="0666"
SUBSYSTEM=="hidraw", ATTRS{idVendor}=="1038", MODE="0666"

SUBSYSTEM=="usb", ATTRS{idVendor}=="1038", ATTRS{idProduct}=="1038:1628", MODE="0666", GROUP="plugdev"
