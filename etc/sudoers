## This file MUST be edited with the 'visudo' command as root.

Cmnd_Alias REBOOT = /sbin/halt, /sbin/reboot, /sbin/poweroff
Cmnd_Alias PKGMAN = /usr/bin/pacman, /usr/bin/paru, /usr/bin/octopi, /usr/bin/bauh, /usr/bin/topgrade
Cmnd_Alias HARMLESS = /usr/bin/cat, /usr/bin/ls, /usr/bin/grep, /usr/bin/find, /usr/bin/bat
Defaults!/usr/bin/visudo env_keep += "SUDO_EDITOR EDITOR VISUAL"
Defaults secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
Defaults passwd_timeout=-1
Defaults env_keep += "DISPLAY HOME"
Defaults!REBOOT !log_output
Defaults!PKGMAN !intercept, !log_subcmds
Defaults !intercept, !log_subcmds, !pam_silent, fast_glob
root ALL=(ALL:ALL) ALL

%wheel ALL=(ALL:ALL) ALL
%wheel ALL=(ALL:ALL) NOPASSWD: HARMLESS, PKGMAN
%sudo ALL=(ALL:ALL) ALL
@includedir /etc/sudoers.d
