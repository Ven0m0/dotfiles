# Reclaim disk space removing unneeded localizations
# NOTE: You may want to omit this hook and instead configure the NoExtract
# option inside pacman.conf if you only intend to keep one or two languages
# installed. More info here: https://bbs.archlinux.org/viewtopic.php?id=208549
# Note by Energetix: comment the "CheckSpace" line of pacman.conf
[Trigger]
Operation = Install
Operation = Upgrade
Type = File
Target = usr/share/locale/?*
Target = usr/share/man/?*
Target = usr/share/gnome/help/*
Target = usr/share/omf/*
Target = usr/share/doc/kde/HTML/*
Target = usr/share/tcltk/*
Target = usr/share/cups/templates/*
Target = usr/share/cups/locale/*
Target = usr/share/cups/doc-root/*
Target = usr/share/calendar/*
#Target = usr/share/aptitude/* # This does not exist in Arch.
Target = usr/share/help/?*

# This avoids the removal of English content (necessary).
Target = !usr/share/help/C/*
Target = !usr/share/locale/C/*
Target = !usr/share/locale/en/*
Target = !usr/share/locale/en_GB/*
Target = !usr/share/locale/en_US/*
Target = !usr/share/man/en_GB/*
Target = !usr/share/man/man*

[Action]
Description = Run localepurge
When = PostTransaction
Exec = /usr/bin/localepurge
Depends = localepurge
